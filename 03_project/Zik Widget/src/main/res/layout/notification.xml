<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    android:textAlignment="center"
    android:background="#FF000000">

    <LinearLayout
        android:id="@+id/notification_llDisconnected"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/parrot_logo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disconnected"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:shadowColor="#888"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:textStyle="bold"
            android:typeface="monospace"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notification_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/notification_imgParrotLogo"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/parrot_logo"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/notification_image_noisecancellation"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:id="@+id/notification_imgBattery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="-3dp"/>
        <TextView
            android:id="@+id/notification_text_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#FFF"
            android:shadowColor="#888"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:textStyle="bold"
            android:typeface="monospace" />

        </LinearLayout>
</RelativeLayout>